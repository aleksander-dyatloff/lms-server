{
  "compilerOptions": {
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "build",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@routes/*": [
        "./routes/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@root/*": [
        "./*"
      ]
    },
  }
}